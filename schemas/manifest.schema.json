{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://json-hd.org/schemas/manifest.schema.json",
  "title": "JSON-HD Manifest Schema",
  "type": "object",
  "required": [
    "jsonhd",
    "profile",
    "id",
    "created",
    "payloads",
    "integrity"
  ],
  "properties": {
    "jsonhd": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "profile": {
      "type": "string",
      "minLength": 3
    },
    "id": {
      "type": "string",
      "minLength": 3
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "about": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "payloads": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "payload-ref.schema.json"
      }
    },
    "integrity": {
      "$ref": "integrity.schema.json"
    },
    "provenance": {
      "type": "object",
      "additionalProperties": true
    },
    "extensions": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      }
    }
  },
  "additionalProperties": true
}
