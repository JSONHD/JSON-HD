{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://json-hd.org/schemas/payload-ref.schema.json",
  "title": "JSON-HD Payload Reference",
  "type": "object",
  "required": [
    "name",
    "mediaType",
    "ref"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "mediaType": {
      "type": "string",
      "minLength": 3
    },
    "size": {
      "type": "integer",
      "minimum": 0
    },
    "hash": {
      "type": "object",
      "required": [
        "alg",
        "value"
      ],
      "properties": {
        "alg": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "minLength": 8
        }
      },
      "additionalProperties": true
    },
    "ref": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "path",
            "uri",
            "byteRange",
            "dataset",
            "box"
          ]
        },
        "path": {
          "type": "string"
        },
        "uri": {
          "type": "string"
        },
        "offset": {
          "type": "integer",
          "minimum": 0
        },
        "length": {
          "type": "integer",
          "minimum": 0
        },
        "id": {
          "type": "string"
        }
      },
      "additionalProperties": true,
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "path"
              }
            }
          },
          "then": {
            "required": [
              "path"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "uri"
              }
            }
          },
          "then": {
            "required": [
              "uri"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "byteRange"
              }
            }
          },
          "then": {
            "required": [
              "offset",
              "length"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "dataset"
              }
            }
          },
          "then": {
            "required": [
              "path"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "box"
              }
            }
          },
          "then": {
            "required": [
              "id"
            ]
          }
        }
      ]
    }
  },
  "additionalProperties": true
}
